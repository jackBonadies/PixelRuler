<UserControl x:Class="PixelRuler.BoundingBoxLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PixelRuler"
             mc:Ignorable="d" 
             >
    <UserControl.Resources>
        <local:IntToStringConverter x:Key="IntToStringConverter"/>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Calibri" />
            <Setter Property="FontSize" Value="18" />
        </Style>
    </UserControl.Resources>
    <Border Background="#ff434343" CornerRadius="5" Margin="5, 5, 0, 0"  Padding="1,1,1,1" > <!--TODO: transparency-->
    <Border Background="#ffffffff" CornerRadius="4" Padding="5, 0, 5, 0" >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock d:Text="1234" Padding="0,4,0,4" Text="{Binding BoundingBoxWidth}" FontSize="18"/>
                <TextBlock Foreground="#ff434343" Margin="5,0,5,0" Padding="0,4,0,4" >×</TextBlock>
            <TextBlock d:Text="1234" Padding="0,4,0,4" Text="{Binding BoundingBoxHeight}"></TextBlock>
        </StackPanel>
    </Border>
    </Border>
</UserControl>
