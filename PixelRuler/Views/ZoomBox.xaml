<UserControl
    x:Class="PixelRuler.Views.ZoomBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PixelRuler.Views"
    xmlns:main="clr-namespace:PixelRuler"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type=main:PixelRulerViewModel}"
    mc:Ignorable="d">
    <UserControl.Effect>
        <DropShadowEffect
            BlurRadius="14"
            Direction="0"
            ShadowDepth="0" />
    </UserControl.Effect>
    <Border
        x:Name="outerBorder"
        Background="#303030"
        BorderBrush="LightGray"
        BorderThickness="{Binding Settings.ZoomViewModel.BorderThickness}"
        CornerRadius="4">
        <Grid>
            <Border
                x:Name="imageBackgroundBorder"
                Background="Red"
                CornerRadius="2.5" />
            <Canvas
                x:Name="zoomCanvas"
                Width="100"
                Height="100" />
            <Border
                x:Name="colorDisplay"
                Width="170"
                Height="46"
                Margin="0,0,-3,-3"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Background="LightGray"
                CornerRadius="4, 0, 4, 0">
                <StackPanel Orientation="Horizontal">
                    <Border
                        Width="40"
                        Height="40"
                        Margin="3,0,0,0"
                        Background="{Binding Color, Converter={StaticResource DrawingColorToWpfBrushConverter}}"
                        BorderBrush="#90303030"
                        BorderThickness="1"
                        CornerRadius="3" />
                    <TextBlock
                        Margin="4,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="26"
                        FontWeight="SemiBold"
                        Foreground="#303030"
                        Text="{Binding Color, Converter={StaticResource ColorFormatStringConverter}}" />
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
