<UserControl x:Class="DesignRuler.BoundingBoxLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesignRuler"
             mc:Ignorable="d" 
             >
    <UserControl.Resources>
        <local:IntToStringConverter x:Key="IntToStringConverter"/>
    </UserControl.Resources>
    <Border Background="White" CornerRadius="4" Padding="4">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding BoundingBoxWidth, Converter={StaticResource IntToStringConverter}}"></TextBlock>
            <TextBlock Margin="5,0,5,0">x</TextBlock>
            <TextBlock Text="{Binding BoundingBoxHeight}"></TextBlock>
        </StackPanel>
    </Border>
</UserControl>
